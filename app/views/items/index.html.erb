<div class="w-full mb-16">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Items</h1>
  </div>
  <div class="max-w-2xl my-8">
    <div class="table font-bold min-w-full">
      <div>Quantity</div>
      <div>Description</div>
      <div>Shelf price</div>
      <div>Imported</div>
      <div>Category</div>
      <div></div>
    </div>
    <%= turbo_frame_tag "new-item-form", src: new_item_path %>
    <div id="items">
      <%= render @items %>
    </div>
  </div>
  <div>
    <%= button_to taxs_calculator_index_path, method: :get, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      Generate Invoice
    <% end %>
  </div>
</div>
