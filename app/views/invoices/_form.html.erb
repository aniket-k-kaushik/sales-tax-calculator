<%= form_with model: invoice, id: dom_id(invoice, "form"), class: "table min-w-full" do |form| %>
  <div>
    <%= form.text_field :invoice_number, class: "block rounded-md border border-gray-200 outline-none px-3 py-2  w-full" %>
    <%= inline_error_for(:invoice_number, invoice) %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
